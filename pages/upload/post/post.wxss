/* miniprogram/pages/Upload/UploadConfession/UploadConfession.wxss */

.content_textarea {
  width: 100%;
  height: auto;
  min-height: 300rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
  text-align: justify;
}

.tags-box {
  margin-top: 30rpx;
  /* background-color: #fff; */
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  height: auto;
}

.tags-box .tag {
  display: inline-block;
  padding: 15rpx;
  margin: 10rpx;
  box-sizing: border-box;
  background-color: #fff;
  border: #f3f6f8 solid 1px;
  border-radius: 200rpx;
}

.tag_choose-panel {
  width: 100%;
  height: 750rpx;
}

.input_search {
  width: 690rpx;
  height: 64rpx;
  margin: 30rpx auto;
  padding: 16rpx;
  /* line-height: 32rpx; */
  box-sizing: border-box;
  border: #f3f6f8 solid 1px;
  border-radius: 32rpx;
}

.images-box {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}

.image-box {
  position: relative;
  width: 210rpx;
  height: 210rpx;
  margin: 10rpx;
}

.image {
  width: 100%;
  height: 100%;
}

.btn-remove_img {
  position: absolute;
  right: 0;
  top: 0;
  width: 30rpx;
  height: 30rpx;
}

.btn-remove_img {
  color: #f00;
  text-align: center;
  line-height: 30rpx;
}

.operation-block {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  padding: 16rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.placeholder-box {
  width: 100%;
  height: 128rpx;
  background: none;
}

.operations {
  display: flex;
  justify-content: space-between;
  height: 100%;
}

.operations .btn {
  width: 40%;
  height: 100%;
  /* line-height: 66rpx;
  font-size: 28rpx; */
}

.btn-upload {
  background-color: #169bd5;
  color: #fff;
}
