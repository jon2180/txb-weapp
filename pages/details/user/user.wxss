/* pages/details/user/user.wxss */

.profile-card {
  width: 100%;
  height: 260rpx;
  display: flex;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.profile-card .avatar {
  width: 128rpx;
  height: 128rpx;
  border: none;
  margin-right: 20rpx;
  border-radius: 50%;
}

.profile-card .info view {
  height: 64rpx;
  line-height: 64rpx;
  /* font-size: 36rpx; */
}

.info-nickname {
  font-size: 36rpx;
  font-weight: 600;
}

.info-age {
  font-size: 34rpx;
}

.info-nav_to-profile {
  font-size: 28rpx;
  color: #666;
}
