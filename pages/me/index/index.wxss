/* pages/mine/mine.wxss */

.profile {
  width: 100%;
  height: 216rpx;
  background-color: #fff;
  padding: 16rpx 30rpx;
  box-sizing: border-box;
}

.profile-card {
  display: flex;
  margin-bottom: 16rpx;
}

.profile-card .avatar {
  width: 128rpx;
  height: 128rpx;
  border: none;
  margin-right: 20rpx;
  border-radius: 50%;
}

.profile-card .info view {
  height: 64rpx;
  line-height: 64rpx;
  /* font-size: 36rpx; */
}

.info-nickname {
  font-size: 36rpx;
  font-weight: 600;
}

.info-age {
  font-size: 34rpx;
}

.info-nav_to_profile {
  font-size: 28rpx;
  color: #666;
  /* border-radius: 32rpx; */
  /* background-color: #fd4647; */
}

.main-card {
  width: 690rpx;
  margin: 30rpx;
  /* padding: 30rpx; */
  /* border: #666666 solid 1px; */
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
}