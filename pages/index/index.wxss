/**index.wxss**/

.search_bar {
  height: 64rpx;
  width: 750rpx;
  position: relative;
}

.search_bar-input {
  box-sizing: border-box;
  height: 48rpx;
  width: 690rpx;
  border: #f3f6f8 solid 1px;
  border-radius: 24rpx;
  margin: 8rpx auto;
  padding: 0 30rpx;
  font-size: 36rpx;
}

.banner {
  height: 310rpx;
  width: 750rpx;
}

.banner-container {
  height: 310rpx;
  width: 750rpx;
}

.banner .banner-item {
  width: 690rpx;
  height: 310rpx;
  margin: 0 30rpx;
  border-radius: 10rpx;
}

.categories {
  width: 750rpx;
  /* height: 150px; */
  /* background: #f3f6f8; */
}

.categories-row-1, .categories-row-2 {
  display: flex;
  justify-content: space-around;
  margin: 30rpx 0;
}

.category .category-icon {
  display: block;
  width: 81rpx;
  height: 81rpx;
}

.category-label {
  display: block;
  text-align: center;
  font-size: 28rpx;
}

.nav_bar {
  width: 690rpx;
  height: 64rpx;
  margin: 0 auto;
  white-space: nowrap;
  overflow-x: hidden;
}

.nav_bar-item {
  display: inline-block;
  width: 100rpx;
}

.goods-list {
  width: 690rpx;
  height: auto;
  margin: 0 auto;
  /* background: #f2f2f2; */
  display: flex;
  justify-content: space-evenly;
  /* align-content: space-between; */
  column-gap: 20rpx;
  flex-wrap: wrap;
}

.good-item {
  width: 335rpx;
  height: 200rpx;
  /* display: inline-block; */
  background: #f3f6f8;
  /* border: #123123 solid 1px; */
  margin: 10rpx 0;
}
