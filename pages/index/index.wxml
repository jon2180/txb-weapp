<view>
  <!-- search bar START -->
  <view class="search_bar">
    <input class="search_bar-input" disabled></input>
  </view>
  <!-- search bar END -->

  <!-- banner START -->
  <view class="banner">
    <swiper class="banner-container" indicator-dots="{{indicator}}">
      <block wx:for="{{bannerImages}}" wx:key="{{index}}">
        <swiper-item>
          <image class="banner-item" src="{{item}}"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- banner END -->

  <!-- catogories area START -->
  <view class="categories">
    <view class="categories-row-1">
