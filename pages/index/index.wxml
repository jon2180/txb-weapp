    </view>
  </view>
  <!-- catogories area END -->

  <!-- navigation area START -->
  <view class="nav_bar">
    <block wx:for="{{categories}}" wx:key="index">
      <text class="nav_bar-item">{{item}}</text>
    </block>
  </view>
  <!-- navigation area END -->

  <!-- commodities area START -->
  <view class="goods-list">
    <block wx:for="{{commodities}}" wx:key="{{index}}">
      <view class="good-item"></view>
    </block>
  </view>
