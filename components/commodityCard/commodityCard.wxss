/* components/commodityCard/commodityCard.wxss */

.good-item {
  border-radius: 15rpx;
  width: 335rpx;
  background: #fff;
  margin-bottom: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border: #f6f6f6 solid 1px;
  box-shadow: 10rox 10rpx #f6f6f6;
}

.good-item .good-img {
  border-radius: 15rpx 15rpx 0 0;
  width: 100%;
  height: 335rpx;
}

.good-item .good-info {
  width: 305rpx;
  margin: 0 auto;
}

.good-item .good-desc {
  display: -webkit-box;
  font-size: 32rpx;
  line-height: 1.3;
  width: 100%;
  margin: 16rpx 0;
  overflow: hidden; /*溢出隐藏*/
  text-overflow: ellipsis; /*以省略号...显示*//* white-space: nowrap; *//*强制不换行*/
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.good-item .good-sell {
  display: flex;
  justify-content: space-between;
}

.good-item .good-click {
  font-size: 28rpx;
  color: #666;
}

.good-item .good-origin {
  display: flex;
  justify-content: space-between;
}

.good-origin .good-origin-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
  margin-left: 0;
  border-radius: 50%;
}

.good-origin .good-origin-info {
  margin-top: 10rpx;
  width: 205rpx;
  height: 80rpx;
  line-height: 40rpx;
}

.good-origin .good-origin-info view:nth-child(2) {
  font-size: 28rpx;
  color: #666;
}

.nickname {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
